# Required
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4.1-mini

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/dealership.db

# Redis
REDIS_URL=redis://localhost:6379/0

# App
DEBUG=true
LOG_LEVEL=INFO

# Background Tasks (Note: These are now only used as fallback if no sales dashboard is connected)
HUMAN_CHECK_MIN_SECONDS=5
HUMAN_CHECK_MAX_SECONDS=10
HUMAN_AVAILABILITY_CHANCE=0.6

# Twilio Voice (Required for phone conversations)
# Get credentials from https://console.twilio.com
# 1. Customer calls your TWILIO_PHONE_NUMBER
# 2. AI agent handles the call with custom STT/TTS
# 3. If escalation needed, AI calls CUSTOMER_SERVICE_PHONE and bridges the call
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io
CUSTOMER_SERVICE_PHONE=+15559876543

# Local Audio Models (STT/TTS - as specified in CLAUDE.md)
# Faster-Whisper for Speech-to-Text (GPU-accelerated)
WHISPER_MODEL=medium           # Options: tiny, base, small, medium, large-v2, large-v3
WHISPER_DEVICE=cuda            # Options: cuda, cpu (cuda recommended for speed)
WHISPER_COMPUTE_TYPE=int8      # Options: int8, float16, float32 (int8 for memory efficiency)

# Kokoro-82M for Text-to-Speech (local, <2GB VRAM)
KOKORO_VOICE=af_heart          # af_heart = warm friendly female voice
KOKORO_LANG=a                  # a = American English, b = British English

# Hugging Face (optional - for faster model downloads)
# Get token from https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here