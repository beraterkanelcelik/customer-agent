# Required
OPENAI_API_KEY=sk-your-key-here

# LiveKit
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/dealership.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Voice - STT
WHISPER_MODEL=medium
WHISPER_DEVICE=cuda

# Voice - TTS (options: kokoro, piper, edge)
TTS_BACKEND=kokoro
# Kokoro - high quality, local, GPU-accelerated, low VRAM (<2GB)
KOKORO_VOICE=af_heart
KOKORO_LANG_CODE=a
# Piper - good quality, local, CPU-based
PIPER_VOICE=en_US-lessac-high
# Edge TTS - excellent quality, cloud-based (requires internet)
EDGE_TTS_VOICE=en-US-JennyNeural

# App
DEBUG=true
LOG_LEVEL=INFO

# Background Tasks (Note: These are now only used as fallback if no sales dashboard is connected)
HUMAN_CHECK_MIN_SECONDS=5
HUMAN_CHECK_MAX_SECONDS=10
HUMAN_AVAILABILITY_CHANCE=0.6

# Email Notifications (optional - for callback notifications when sales unavailable)
# If not configured, emails will be logged to console instead
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SALES_EMAIL=sales@yourdealership.com
